<?xml version="1.0" encoding="utf-8"?>
<mx:Window xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" minWidth="300" minHeight="600" width="300" height="600"
	backgroundAlpha="0"
    showTitleBar="false"
    showStatusBar="false"
    showGripper="false"
    borderStyle="none"    
    horizontalAlign="center"
    xmlns:contacts="view.contacts.*"
    creationComplete="init()">
    <mx:Script>
    	<![CDATA[
    		import commun.Actions;
    		private function init():void{
    			nativeWindow.x = (Capabilities.screenResolutionX - nativeWindow.width) / 2;
                nativeWindow.y = (Capabilities.screenResolutionY - nativeWindow.height) / 2;
                contactView.addEventListener(Actions.SEARCHCONTACT,searchContact);								   			
    		}
    		
    		public function searchContact(event : Event):void{
    			dispatchEvent(event);
    		}
    	]]>
    </mx:Script>
    <mx:VBox paddingTop="20" styleName="loginScalingBackground" dropShadowEnabled="true" width="100%" height="100%" horizontalAlign="center">
    	<mx:ViewStack id="mainStack">
	    	<contacts:ContactContainer id="contactView">
	    		
	    	</contacts:ContactContainer>
	    </mx:ViewStack>	
    </mx:VBox>
    
	
</mx:Window>
