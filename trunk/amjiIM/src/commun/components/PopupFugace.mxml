<?xml version="1.0" encoding="utf-8"?>
<mx:Window xmlns:mx="http://www.adobe.com/2006/mxml" layout="vertical" width="200" height="100"
	backgroundAlpha="0"
    showTitleBar="false"
    showStatusBar="false"
    showGripper="false"
    borderStyle="none"    
    horizontalAlign="center"    
    creationComplete="init()">
    <mx:Script>
    	<![CDATA[
    		import mx.events.EffectEvent;
    		import mx.effects.Fade;
    		public function init():void{
    			
    		}
    		
    		public function closeThis(event : TimerEvent):void{
    			var dissolve : Fade = new Fade;
    			dissolve.alphaFrom = 1;
            	dissolve.alphaTo = 0;
            	dissolve.duration = 500;
            	dissolve.target=this;
            	dissolve.play(); 
            	dissolve.addEventListener(EffectEvent.EFFECT_END,closeAfterEffect);
    		}
    		
    		public function closeAfterEffect(event : EffectEvent):void{
    			this.close();
    		}
    		
    		
    	]]>
    </mx:Script>
    
    <mx:VBox width="100%" height="100%"
	    borderStyle="solid"    
	    horizontalAlign="center"    
	    borderColor="#FFCC00"
	    cornerRadius="15"
	    backgroundColor="#FFFFFF">
    	
    </mx:VBox>
	
</mx:Window>
