<?xml version="1.0" encoding="utf-8"?>
<mx:Window xmlns:mx="http://www.adobe.com/2006/mxml" layout="vertical" width="600" height="300"
	backgroundAlpha="0"
    showTitleBar="false"
    showStatusBar="false"
    showGripper="false"
    borderStyle="none"    
    horizontalAlign="center"
    xmlns:components="commun.components.*"
    creationComplete="init()">
    <mx:Script>
    	<![CDATA[
    		import commun.Actions;
    		import model.vo.CreateUserVO;
    		public var createUserVO : CreateUserVO = new CreateUserVO;
    		public function init():void{
    			nativeWindow.x = (Capabilities.screenResolutionX - nativeWindow.width) / 2;
                nativeWindow.y = (Capabilities.screenResolutionY - nativeWindow.height) / 2;
    		}
    	]]>
    </mx:Script>
    <mx:VBox paddingLeft="15" styleName="loginScalingBackground" dropShadowEnabled="true" width="100%" height="100%" horizontalAlign="center">
    	<mx:HBox width="100%" height="15" horizontalAlign="right" paddingRight="15">
		    <components:WindowMin width="9" height="9" buttonMode="true" useHandCursor="true" />
			<components:WindowMax  width="9" height="9" buttonMode="true" useHandCursor="true" />
			<components:WindowClose click="this.close();dispatchEvent(new Event(Actions.CLOSEINSCWIN))" width="9" height="9" buttonMode="true" useHandCursor="true" />			
		</mx:HBox>
		<mx:Grid width="100%" height="100%">
			<mx:GridRow>
				<mx:GridItem width="50%">
					<mx:Grid width="100%">
						<mx:GridRow>
							<mx:GridItem>
								<mx:Label fontFamily="tahoma" fontSize="10" id="lblNom" text="Nom"  color="#9F9F9F" /> 
							</mx:GridItem>
							<mx:GridItem>
								<mx:TextInput themeColor="#FF6600"  id="txtNom" color="#9F9F9F" fontSize="10" height="18" width="100%" borderStyle="solid" borderColor="#9F9F9F" alpha="1.0"/>
							</mx:GridItem>
						</mx:GridRow>
						<mx:GridRow>
							<mx:GridItem>
								<mx:Label fontFamily="tahoma" fontSize="10" id="lblPrenom" text="Prenom"  color="#9F9F9F" /> 
							</mx:GridItem>
							<mx:GridItem>
								<mx:TextInput themeColor="#FF6600"  id="txtPrenom" color="#9F9F9F" fontSize="10" height="18" width="100%" borderStyle="solid" borderColor="#9F9F9F" alpha="1.0"/>
							</mx:GridItem>
						</mx:GridRow>
						<mx:GridRow>
							<mx:GridItem>
								<mx:Label fontFamily="tahoma" fontSize="10" id="lblCivilite" text="Civilite"  color="#9F9F9F" /> 
							</mx:GridItem>
							<mx:GridItem>
								<mx:TextInput themeColor="#FF6600"  id="txtCivilite" color="#9F9F9F" fontSize="10" height="18" width="100%" borderStyle="solid" borderColor="#9F9F9F" alpha="1.0"/>
							</mx:GridItem>
						</mx:GridRow>
					</mx:Grid>
				</mx:GridItem>
				<mx:GridItem width="50%">
					
				</mx:GridItem>
			</mx:GridRow>
		</mx:Grid>
    </mx:VBox>
	
</mx:Window>
